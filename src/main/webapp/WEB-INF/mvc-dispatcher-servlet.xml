<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--指明 controller/service 所在包，并扫描其中的注解-->
    <context:component-scan base-package="com.zun1.controller"/>
    <context:component-scan base-package="com.zun1.service"/>
    <!-- 静态资源(js、image等)的访问 -->
    <mvc:default-servlet-handler/>
    <!-- 开启注解 -->
    <mvc:annotation-driven conversion-service="convertService"/>
    <!--ViewResolver 视图解析器-->
    <!--用于支持Servlet、JSP视图解析-->
    <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="people" class="com.zun1.model.People">
        <property name="name" value="王洋"/>
        <property name="age" value="27"/>
    </bean>

    <bean id="car" class="com.zun1.model.Car">
        <property name="carName" value="BMW"/>
        <property name="people" ref="people"/>
    </bean>

    <bean id="book" class="com.zun1.model.Book">
    </bean>

    <bean id="convertService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="com.zun1.converter.DateConverter">
                    <constructor-arg type="java.lang.String" value="yy-mm-dd"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>